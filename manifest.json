{
  "manifest_version": 3,
  "name": "Auto Speed Test",
  "description": "A Chrome extension to automatically run speed tests every hour.",
  "version": "1.0",
  "permissions": ["alarms", "storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
        "icons": {
          "16": "icons/icon16.png",
          "32": "icons/icon32.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
        },
        
  "action": {
    "default_popup": "popup.html"
  }
}

